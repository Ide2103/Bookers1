<p id="notice"></p>
<h1>Books</h1>

<table class="table" >
  <thead>
  <tr>
  <th class="title">Title</th>
  <th class="body">Body</th>
  <th class=></th>
  </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
    <a><%= link_to "Show", book_path(book.id) %></a>
    <a><%= link_to "Edit", edit_book_path(book.id) %></a>
    <a><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a>
  </td>
</tr>
<% end %> 
</tbody>
</table>   


<h2>New book</h2>

<div class="form">
 <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
 <% end %>
 <%= form_with model: @book, url: '/books', method: :post do |f| %>
 <label>Title</label>
 <div class="field">  
  <%= f.text_field :title %>
 </div>
 <label>Body</label>
 <div class="field">
  <%= f.text_area :body %>
 </div>
 <div class="actions">
   <%= f.submit 'Create Book' %>
 </div>
 <% end %>
</div>
